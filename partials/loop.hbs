{{! Previous/next page links - only displayed on page 2+ }} {{! This is the post loop - each post will be output using this
markup }}
{{#foreach posts}}
<article class="{{post_class}} post-loop">
  <header class="post-header">
    <a href="{{url}}" class="post-attach-image">
      <img src="{{image}}" alt="{{image}}">
    </a>
    <h2 class="post-title">
      <a href="{{url}}">{{{title}}}</a>
    </h2>
  </header>
  <section class="post-excerpt">
    <p>{{excerpt characters="140"}}
      <a class="read-more" href="{{url}}">&raquo;</a>
    </p>
  </section>
  <footer class="post-meta">
    {{#if author.image}}
    <img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" /> {{/if}}
    <span class="post-meta-author">{{author}}</span>
    <i class="split-point"></i>
    <span class="post-meta-tag">{{tags prefix="标签："}}</span>
    <i class="split-point"></i>
    <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">
      {{date format="YYYY年MM月DD日"}}
    </time>
  </footer>
</article>
{{/foreach}} {{! Previous/next page links - displayed on every page }} {{pagination}}

{{!< default}}
{{! This is a page template. A page outputs content just like any other post, and has all the same attributes by default, but you can also customise it to behave differently if you prefer. }}
{{! Everything inside the #post tags pulls data from the page }}
{{#post}}
  <header id="custom-header">
  {{navigation}}
  </header>
  <main class="content page-content" role="main">
    <article class="{{post_class}}">

      <header class="post-header">
        <h1 class="post-title">{{title}}</h1>
        <section class="post-meta">
          <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="YYYY年MM月DD日 HH:mm"}}</time>
        </section>
      </header>

      <section class="post-content">
        {{content}}
      </section>
      <footer class="post-footer">
        {{#author}} {{#if image}}
        <figure class="author-image">
          <a class="img" href="{{url}}" style="background-image: url({{image}})">
            <span class="hidden">{{name}}的头像</span>
          </a>
        </figure>
        {{/if}}

        <section class="author page-author">
          <h4>
            <a href="{{url}}">{{name}}</a>
          </h4>

          {{#if bio}}
          <p>{{bio}}</p>
          {{else}}
          <p>继续阅读此作者的
            <a href="{{url}}">更多文章</a>。</p>
          {{/if}}
          <div class="author-meta">
            {{#if location}}
            <span class="author-location icon-location">{{location}}</span>{{/if}} {{#if website}}
            <span class="author-link icon-link">
              <a href="{{website}}">{{website}}</a>
            </span>{{/if}}
          </div>
        </section>

        {{/author}}
      </footer>
      <div id="gitment-container"></div>
    </article>
  </main>
{{/post}}
<script type="text/javascript" src="{{asset " js/highlight.min.js "}}"></script>
<script>
  hljs.initHighlightingOnLoad();
</script>

<script type="text/javascript" src="{{asset " js/gitment.min.js "}}"></script>
<script>
  var gitment = new Gitment({
    owner: 'sea-ice',
    repo: 'blog-comment',
    oauth: {
      client_id: 'your_gitment_client_id_here',
      client_secret: 'your_gitment_client_secret_here',
    }
  })
  gitment.render('gitment-container')
</script>
